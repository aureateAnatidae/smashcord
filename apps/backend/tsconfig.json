{
    "compilerOptions": {
        "noEmit": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",

        "rootDir": ".",
        "outDir": "./dist",

        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,

        "types": ["node"],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",

        "baseUrl": "src",
        "paths": {
            "@seeds/*": ["../seeds/*"],
            "@test/*": ["test/*"],
            "@db/*": ["db/*"],
            "@v1/*": ["v1/*"]
        }
    },
    "exclude": [
        "vitest.config.ts",
        "dist",
        "node_modules"
      ]
}
